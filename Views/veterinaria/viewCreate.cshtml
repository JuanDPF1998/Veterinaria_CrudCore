
@{
    ViewData["Title"] = "viewCreate";
}
@model Mascotas

<div class="container mt-4">
    <div class="row">
        <h2>Agregar nuevo registro</h2>
    </div>
    <form asp-action="Create">
        <div class="form-group">
            <label class="form-label">Folio Cita:</label>
            <input asp-for="folioCita" class="form-control"/>
        </div>
        <div class="form-group">
            <label class="form-label">Nombre:</label>
            <input  asp-for="nombre" class="form-control"/>
        </div>
        <div class="form-group">
            <label class="form-label">Raza canina:</label>
            <input asp-for="raza" class="form-control"/>
        </div>
        <div class="form-group">
            <label  class="form-label">Genero mascota</label>
            <input  asp-for="generoRaza" class="form-control"/>
        </div>
        <div class="form-group">
            ´<label  class="form-label">Descripcion de cita canina:</label>
            <input asp-for="descripcion" class="form-control"/>
        </div>
        <br />
        <div>
            <button  class="btn btn-success" type="submit">Guardar</button>
        </div>
    </form>
</div>
