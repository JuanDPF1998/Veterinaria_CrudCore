
@{
    ViewData["Title"] = "viewEdit";
}
@model Mascotas

<div class="container mt-4">
    <div class="row">
        <h2>Editar registro</h2>
    </div>
    <form asp-action="Editar">
        <input type="hidden" asp-for="Id"/>
        <div class="form-group">
            <label class="form-label">Folio Cita:</label>
            <input class="form-control" asp-for="folioCita"/>
        </div>
        <div class="form-group">
            <label class="form-label">Nombre:</label>
            <input class="form-control" asp-for="nombre"/>
        </div>
        <div class="form-group">
            <label class="form-label">Raza:</label>
            <input class="form-control" asp-for="raza"/>
        </div>
        <div class="form-group">
            <label class="form-label">Genero mascota:</label>
            <input class="form-control" asp-for="generoRaza"/>
        </div>
        <div class="form-group">
            <label class="form-label">Descripcion servicio animal:</label>
            <input class="form-control" asp-for="descripcion"/>
        </div>
        <br />
        <div>
            <button class="btn btn-success" type="submit">Actualizar</button>
            <a asp-action="Index" class="btn btn-secondary">Volver</a>
        </div>
    </form>
</div>

