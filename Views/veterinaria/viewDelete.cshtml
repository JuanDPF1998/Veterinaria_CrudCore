
@{
    ViewData["Title"] = "viewDelete";
}
@model Mascotas

<div class="container mt-4">
    <div class="text-center">
        <h2>¿Estas seguro de eliminar el registro?</h2>
    </div>
    <div>
        <dl class="row">
            <dt class="col-sm-2">Folio cita:</dt>
            <dd class="col-sm-10">@Model.folioCita</dd>

            <dt class="col-sm-2">Nombre:</dt>
            <dd class="col-sm-10">@Model.nombre</dd>

            <dt class="col-sm-2">Raza:</dt>
            <dd class="col-sm-10">@Model.raza</dd>

            <dt class="col-sm-2">Genero mascota:</dt>
            <dd class="col-sm-10">@Model.generoRaza</dd>

            <dt class="col-sm-2">Descripcion servicio animal:</dt>
            <dd class="col-sm-10">@Model.descripcion</dd>
        </dl>
        <form asp-action="Delete">
            <input asp-for="Id" type="hidden"/>
            <button class="btn btn-danger" type="submit">Eliminar</button>
        </form>
    </div>
</div>
