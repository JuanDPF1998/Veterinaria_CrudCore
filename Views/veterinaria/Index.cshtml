
@{
    ViewData["Title"] = "Index";
}
@model List<Mascotas>

<div class="container mt-4">
    <div class="row">
        <h2>Lista de mascotas registradas</h2>
    </div>
    <div>
        <a asp-action="viewCreate" class="btn btn-primary">Agregar nuevo</a>
    </div>
    <div class="table">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Folio Cita:</th>
                    <th>Nombre:</th>
                    <th>Raza:</th>
                    <th>Genero mascota:</th>
                    <th>Descripcion servicio animal:</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var mascota in Model)
                {
                    <tr>
                        <td>@mascota.folioCita</td>
                        <td>@mascota.nombre</td>
                        <td>@mascota.raza</td>
                        <td>@mascota.generoRaza</td>
                        <td>@mascota.descripcion</td>
                        <td>
                            <a asp-route-id="@mascota.Id" asp-action="viewEdit" class="btn btn-warning">Editar</a>
                        </td>
                    </tr>
                }
            </tbody>
            </table>
        </div>
    </div>

